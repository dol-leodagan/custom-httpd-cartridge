#!/bin/bash -e

case "$1" in
  -v|--version)
    version="$2"
esac

# Create/truncate Apache PassEnv configuration file
echo > $OPENSHIFT_HTTPDWSGI_DIR/conf.d/passenv.conf
echo > $OPENSHIFT_HTTPDWSGI_DIR/conf.d/server-status.conf

mkdir -p $OPENSHIFT_HTTPDWSGI_DIR/{run,sessions,tmp,conf,conf.d,www}
