#!/bin/bash -e

case "$1" in
  -v|--version)
    version="$2"
esac

# Create/truncate Apache PassEnv configuration file
echo > $OPENSHIFT_HTTPDWSGI_DIR/conf.d/passenv.conf
echo > $OPENSHIFT_HTTPDWSGI_DIR/conf.d/server-status.conf

mkdir -p $OPENSHIFT_HTTPDWSGI_DIR/{run,sessions,tmp,conf,conf.d}

cp -r ${OPENSHIFT_HTTPDWSGI_DIR}/conf/* ${OPENSHIFT_HTTPDWSGI_DIR}/conf/
cp -r ${OPENSHIFT_PHPMYADMIN_DIR}/conf.d/* ${OPENSHIFT_HTTPDWSGI_DIR}/conf.d/
