#!/bin/bash -e

if [[ -d /usr/lib64 ]]; then
  _libdir=/usr/lib64
else
  _libdir=/usr/lib
fi

source $OPENSHIFT_CARTRIDGE_SDK_BASH

case "$1" in
    -v|--version)
      version="$2"
esac

echo "$version" > "$OPENSHIFT_HTTPDWSGI_DIR/env/OPENSHIFT_HTTPDWSGI_VERSION"

ln -s ${_libdir}/httpd/modules ${OPENSHIFT_HTTPDWSGI_DIR}modules
ln -s /etc/httpd/conf/magic ${OPENSHIFT_HTTPDWSGI_DIR}conf/magic

client_result ""
client_result "URL: https://$OPENSHIFT_GEAR_DNS/wsgi/"

cart_props "connection_url=https://$OPENSHIFT_GEAR_DNS/wsgi/"
